{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "@types/node"],
    "paths": {
      "@": ["src/*"],
      "@/assets": ["src/assets/*"],
      "@/styles": ["src/styles/*"],
      "@/common": ["src/common/*"],
      "@/utils": ["src/utils/*"],
      "@/components": ["src/components/*"]
    }
  },
  "files": ["global.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*"]
}
